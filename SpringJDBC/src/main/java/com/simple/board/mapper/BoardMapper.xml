<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "0//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
	<mapper namespace="com.simple.board.mapper.BoardMapper">
	
		<insert id="boardInsert">
			insert into board01(num, writer, title, content)
				values(board01_seq.nextval, #{writer}, #{title}, #{content})
		</insert>
		
		<select id="boardSelect" resultType="com.simple.command.BoardVO">
			select * from board01 order by num desc
		</select>
	
		<delete id="boardDelete">
			delete from board01 where num = #{num}
		</delete>
	</mapper>